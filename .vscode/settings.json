{
    "python.defaultInterpreterPath": "${workspaceRoot}/conda/bin/python",
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--rcfile=.vscode/.pylintrc"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests",
        "--cpu-only"
    ],
    "files.watcherExclude": {
        "**/conda/**": true,
        "**/conda-build/**": true,
        "**/packrat/**": true,
        "**/data/**": true,
        "**/experiments/**": true,
        "**/evaluation/results/**": true,
        "**/docs/_build/**": true,
        "**/docs/api/**": true,
        "**/tools/**": true,
        "**/tmp/**": true,
        "**/.snakemake/**": true,
        "**/.slurm/**": true,
        "**/.ipynb_checkpoints/**": true,
        "**/.pytest_cache/**": true,
        "**/.virtual_documents/**": true,
        "**/__pycache__/**": true,
        "**/*.deprecated/**": true,
        "**/*.bak/**": true,
        "**/*.old/**": true
    },
    "files.exclude": {
        "**/evaluation/results/raw/**": true,
        "**/.snakemake/**": true,
        "**/.slurm/**": true,
        "**/.ipynb_checkpoints/**": true,
        "**/.pytest_cache/**": true,
        "**/.virtual_documents/**": true,
        "**/__pycache__/**": true,
        "**/*.deprecated/**": true,
        "**/*.bak/**": true,
        "**/*.old/**": true
    },
    "jupyter.jupyterServerType": "remote",
    "esbonio.server.enabled": false,
    "esbonio.sphinx.confDir": "${workspaceFolder}/docs"
}